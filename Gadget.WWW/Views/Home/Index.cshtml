@model IEnumerable<Gadget.Data.Data.Shop.Product> 
@{
    ViewData["Title"] = "Sklep";
}

<div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="2000">
            <img src="img/tablet2.jpg" class="d-block w-100 img-fluid" alt="...">
        </div>
        <div class="carousel-item" data-bs-interval="2000">
            <img src="img/iphone1.jpg" class="d-block w-100 img-fluid" alt="...">
        </div>
        <div class="carousel-item" data-bs-interval="2000">
            <img src="img/samsung.jpg" class="d-block w-100 img-fluid" alt="...">
        </div>
        <div class="carousel-item" data-bs-interval="2000">
            <img src="img/iphone2.jpg" class="d-block w-100 img-fluid" alt="...">
        </div>
        <div class="carousel-item" data-bs-interval="2000">
            <img src="img/tablet1.jpg" class="d-block w-100 img-fluid" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card">
                <img src="@item.PhotoUrl" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Cena: @item.Price</p>
                    <p class="card-text">Producer: @item.Producer.Name</p>
                    <p class="card-text">
                        Display:
                        @{
                            var displaySpec = item.ProductSpecification
                                .FirstOrDefault(ps => ps.Specification.Name == "Display");
                            if (displaySpec != null)
                            {
                                @displaySpec.Value
                            }
                            else
                            {
                                @: "N/A"
                            }
                        }
                    </p>


                    <div style="display: flex; justify-content: center; gap: 2rem;">
                        <a href="#" class="btn btn-outline-dark">BUY</a>
                        <a asp-controller="Details" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
